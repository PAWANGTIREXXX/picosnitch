# Maintainer : Eric Lesiuta <elesiuta@gmail.com>

pkgname=picosnitch
pkgver=0.6.2
pkgrel=1
epoch=1
pkgdesc='Protect your privacy, see which processes make remote network connections'
arch=('any')
url='https://elesiuta.github.io/picosnitch/'
license=('GPL3')
depends=('python' 'python-bcc' 'dbus-python' 'python-psutil' 'python-requests')
optdepends=()
makedepends=('git' 'python-setuptools')
checkdepends=()
provides=('picosnitch')
conflicts=('picosnitch')
BUILDENV=('!check')
source=("git://github.com/elesiuta/picosnitch.git#tag=v${pkgver}")
sha256sums=('SKIP')

build() {
    cd picosnitch
    python setup.py build
}

package() {
    cd picosnitch
    python setup.py install --prefix='/usr' --root="$pkgdir" --skip-build --optimize='1'
    install -D -m644 "${srcdir}/picosnitch.service" "${pkgdir}/usr/lib/systemd/system/picosnitch.service"
}
